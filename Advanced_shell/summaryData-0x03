#!/bin/bash

# Output CSV file
output_file="pokemon_report.csv"

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Initialize total variables for average calculation
total_height=0
total_weight=0
count=0

# Loop through each .json file in the current directory
for file in *.json; do
  # Use jq to extract name, height (in decimetres), and weight (in hectograms)
  name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')  # Capitalize
  height_dm=$(jq -r '.height' "$file")
  weight_hg=$(jq -r '.weight' "$file")

  # Convert to meters and kilograms
  height_m=$(awk "BEGIN {printf \"%.2f\", $height_dm / 10}")
  weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight_hg / 10}")

  # Write to CSV
  echo "$name,$height_m,$weight_kg" >> "$output_file"

  # Accumulate for average
  total_height=$(awk "BEGIN {print $total_height + $height_m}")
  total_weight=$(awk "BEGIN {print $total_weight + $weight_kg}")
  count=$((count + 1))
done

# Calculate and display averages using awk
avg_height=$(awk "BEGIN {printf \"%.2f\", $total_height / $count}")
avg_weight=$(awk "BEGIN {printf \"%.2f\", $total_weight / $count}")

# Print summary
echo ""
echo "CSV Report generated at: $output_file"
cat "$output_file"
echo ""
echo "Average Height: $avg_height m"
echo "Average Weight: $avg_weight kg"
